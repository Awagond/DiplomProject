<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettinsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/close_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Закрыть"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true">

                </TextView>

                <TextView
                    android:id="@+id/update_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:text="Обновить"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/app_bar_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/profile_image_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="4dp"
        android:text="добавить изображение"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_phone_number"
        android:layout_below="@+id/profile_image_change_btn"
        android:layout_margin="15dp"
        android:hint="Номер телефона"
        android:padding="10dp"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_full_name"
        android:layout_below="@+id/settings_phone_number"
        android:layout_margin="15dp"
        android:hint="ФИО"
        android:padding="10dp"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_address"
        android:layout_below="@+id/setting_full_name"
        android:layout_margin="15dp"
        android:hint="Адресс"
        ></EditText>

</RelativeLayout>